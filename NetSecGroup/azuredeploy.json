{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
      "VDCName": {
         "type": "string",
         "metadata": {
           "description": "used to build NSG names, the nsg build method is used in other deployments"
         },
         "defaultValue": "VDCNoName",
      },
      "location": {
        "type": "string",
        "metadata": {
          "description": "resource location"
        }
      },
      "vnetDefinition": {
        "type": "array",
        "metadata": {
          "description": "vnet definition array"
        }
      },
      "subnetDefinition": {
        "type": "array",
        "metadata": {
          "description": "subnet definition object"
        }
      }
    },
    "variables": {
        "vnetSubnetFEfixedNSGName": "[toLower('NSG',parameters('subnetFEfixedName')))]",
        "vnetSubnetFEdynamicNSGName": "[toLower('NSG',parameters('subnetFEdynamicName')))]",
        "vnetSubnetBEfixedNSGName": "[toLower('NSG',parameters('subnetBEfixedName')))]",
        "vnetSubnetBEdynamicNSGName": "[toLower('NSG',parameters('subnetBEdynamicName')))]",
        "vnetSubnetSECfixedNSGName": "[toLower('NSG',parameters('subnetSECfixedName')))]",

    },
    "resources": [
        {
          "apiVersion": "2015-05-01-preview",
          "type": "Microsoft.Network/networkSecurityGroups",
          "name": "[concat('nsg',parameters('subnetDefinition')[copyIndex()].subnetName)]",
          "location": "[variables('location')]",
          "copy": {
            "name": "NSGRulesCopy",
            "count": "[parameters('vnetDefinition')[2]]"
          },
          "properties": {
            "securityRules": []
          }
        },
    ]
}
