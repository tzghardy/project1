{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
      "vdcName": {
        "type": "string"
      },
      "location": {
        "type": "string"
      },
      "storageAccountName": {
        "type": "string",
        "metadata": {
          "description": "storage account name for deployment"
        },
        "defaultValue": ""
      },
      "vnetDefinition": {
        "type": "object",
        "metadata": {
          "description": "vnet definition with name, addressprefix and number of subnets"
        },
        "defaultValue": {
          "vnetName":"testvnet",
          "addressPrefix":"10.0.0.0/8",
          "subnetCount":2
        }
      },
      "vmCharacteristics": {
        "type": "object",
        "metadata": {
          "description": "hardware and infrastructure characteristics of vm"
        },
        "defaultValue": {
          "vmName": "CSR",
          "vmSize": "Standard_D2",
          "nicCount": 2,
          "nicInfo": [
            {"nicNameBase": "nic0","subnet": "fesubnet","IPAddress": "10.0.0.14"},
            {"nicNameBase": "nic1","subnet": "besubnet","IPAddress": "10.0.1.14"}
          ]
        }
      },
      "vmGalleryInfo": {
        "type": "object",
        "metadata": {
          "description": "Azure Marketplace Information"
        },
        "defaultValue": {
          "imagePublisher": "cisco",
          "imageOffer": "cisco-csr-1000v",
          "imageSKU": "csr-azure-byol",
        }
      },
      "publicIPInformation": {
        "type": "object",
        "metadata": {
          "description": "public IP address object characteristics"
        },
        "defaultValue": {
          "publicIPNameBase": "CSR",
          "publicIPDNSPrefix": "abracisco01new",
          "publicIPAddressType": "Dynamic"
        }
      },
      "adminUsername": {
          "type": "string",
          "defaultValue": "",
          "metadata": {
              "description": "Username for the Virtual Machine."
          }
      },
      "adminPassword": {
          "type": "securestring",
          "metadata": {
              "description": "Password for the Virtual Machine."
          }
      },
      "sshPublicKey": {
          "type": "string",
          "defaultValue": "",
          "metadata": {
              "description": "SSH Key for the virtual machines"
          }
      },
      "authenticationType": {
          "type": "string",
          "defaultValue": "password",
          "allowedValues": [
              "password",
              "sshPublicKey"
          ],
          "metadata": {
              "description": "Authentication Type to chose for the Virtual Machines"
          }
      },
      "assetLocation": {
          "type": "string",
          "metadata": {
              "artifactsBaseUrl": "",
              "description": "URL to acquire other templates"
          },
          "defaultValue": "https://raw.githubusercontent.com/tzghardy/project0/master/cisco-csr-1000v"
      }
    },
    "variables": {
        "storageAccountUri": "[toLower(concat('https://',parameters('storageAccountName'),'.blob.core.windows.net/',parameters('vmName')))]",
        "OSDiskName": "osdisk",
        "vmStorageAccountContainerName": "[parameters('vmCharacteristics').vmName]",
        "vnetID": "[resourceId('Microsoft.Network/virtualNetworks', parameters('vnetDefinition').vnetName)]",
        "subnet0Ref": "[concat(variables('vnetID'),'/subnets/', parameters('vmCharacteristics').nicInfo[0].subnet)]",
        "subnet1Ref": "[concat(variables('vnetID'),'/subnets/', parameters('vmCharacteristics').nicInfo[1].subnet)]",
        "deployApiVer": "2015-01-01",
        "apiVer": "2015-06-15",
        "sshKeyPath": "[concat('/home/',parameters('adminUsername'),'/.ssh/authorized_keys')]",
        "publicIPSetupURI": "[concat(parameters('assetLocation'),'/publicip.json')]",
        "nsgAddRuleURI": "[concat(parameters('assetLocation'),'NetSecgGroup/add_rule/azuredeploy.json')]",
        "osProfile": "[variables(concat('osprofile',parameters('authenticationType')))]",
        "osProfilesshPublicKey": {
            "computerName": "[concat(parameters('vdcName'),parameters('vmCharacteristics').vmName]",
            "adminUsername": "[parameters('adminUsername')]",
            "linuxConfiguration": {
                "disablePasswordAuthentication": "true",
                "ssh": {
                    "publicKeys": [
                        {
                            "path": "[variables('sshKeyPath')]",
                            "keyData": "[parameters('sshPublicKey')]"
                        }
                    ]
                }
            }
        },
        "osProfilepassword": {
            "computerName": "[parameters('vmCharacteristics').vmName]",
            "adminUsername": "[parameters('adminUsername')]",
            "adminPassword": "[parameters('adminPassword')]"
        },
        "vmSecurityRules": [
          {
          "name": "[concat(parameters('vmCharacteristics').vmName,'SSH_Allow')]",
          "properties": {
            "description": "AllowSSH",
            "protocol": "Tcp",
            "sourcePortRange": "*",
            "destinationPortRange": "22",
            "sourceAddressPrefix": "Internet",
            "destinationAddressPrefix": "[concat(parameters('vmCharacteristics').nicInfo[0].IPAddress,'/32')]",
            "access": "Allow",
            "priority": 1100,
            "direction": "Inbound"
          }
        }
      ]
    },
    "resources": [
        {
            "name": "DeployPublicIP",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "[variables('deployApiVer')]",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('publicIPSetupURI')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "vdcName": {
                      "value": "[parameters('vdcName')]"
                    },
                    "location": {
                        "value": "[parameters('location')]"
                    },
                    "publicIPInformation": {
                        "value": "[parameters('publicIPInformation')]"
                    }
                }
            }
        },
        {
            "apiVersion": "[variables('deployApiVer')]",
            "type": "Microsoft.Network/deployments",
            "name": "DeployCsrNsgRuleRequirements",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                  "uri": "[variables('nsgAddRuleURI')]",
                  "contentVersion": "1.0.0.0"
                }
            },
            "parameters": {
              "location": {
                "value": "[parameters('location')]"
              },
              "vmSecurityRules": {
                "value": "[variables('vmSecurityRules')]"
              }
            }
        },
        {
            "type": "Microsoft.Network/deployments",
            "name": "[concat(parameters('vmCharacteristics').vmName,'-',parameters('vmCharacteristics').nicInfo[0].nicNameBase)]",
            "apiVersion": "[variables('apiVer')]",
            "location": "[parameters('location')]",
            "dependsOn": [
              "[resourceId('Microsoft.Resources/deployments','DeployPublicIP')]"
            ],
            "properties": {
              "templateLink": {
                "templateUrI": "$deployNIC",
                "contentVersion": "1.0.0.0"
              },
              "parameters": {
                "location": {
                  "value": "[parameters('location')]"
                },
                "nicName": {
                  "value": ""
                }
                "ipConfigurations": [
                    {
                        "name": "ipconfig1",
                        "properties": {
                            "privateIPAllocationMethod": "Static",
                            "privateIPAddress" : "[parameters('vmCharacteristics')]",
                            "subnet": {
                                "id": "[variables('subnet0Ref')]"
                            },
                            "publicIPAddress": {
                              "id": "[DeployPublicIP.outputs.publicIpId.value]"
                            }
                        }
                    }
                ]
            }
        },
        {
            "apiVersion": "[variables('apiVer')]",
            "type": "Microsoft.Network/networkInterfaces",
            "name": "[concat(parameters('vmCharacteristics').vmName,'-',parameters('vmCharacteristics').nicInfo[0].nicNameBase)]",
            "location": "[variables('location')]",
            "dependsOn": [],
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "ipconfig1",
                        "properties": {
                            "privateIPAllocationMethod": "Static",
                            "privateIPAddress" : "[parameters('vmCharacteristics').nicInfo[1].IPAddress]",
                            "subnet": {
                                "id": "[variables('subnet1Ref')]"
                            }
                        }
                    }
                ],
                "enableIPForwarding": true
            }
        },
        {
            "apiVersion": "[variables('apiVer')]",
            "type": "Microsoft.Compute/virtualMachines",
            "name": "[parameters('vmCharacteristics').vmName]",
            "location": "[parameters('location')]",
            "plan": {
              "name": "[parameters('vmGalleryInfo').imageSKU]",
              "publisher": "[parameters('vmGalleryInfo').imagePublisher]",
              "product": "[parameters('vmGalleryInfo').imageOffer]"
            },
            "dependsOn": [
                "[concat('Microsoft.Network/networkInterfaces/',parameters('vmCharacteristics').vmName,'-',parameters('vmCharacteristics').nicInfo[0].nicNameBase)]",
                "[concat('Microsoft.Network/networkInterfaces/',parameters('vmCharacteristics').vmName,'-',parameters('vmCharacteristics').nicInfo[0].nicNameBase)]"
            ],
            "properties": {
                "hardwareProfile": {
                    "vmSize": "[parameters('vmCharacteristics').vmSize]"
                },
                "osProfile": "[variables('osProfile')]",
                "storageProfile": {
                    "imageReference": {
                        "publisher": "[parameters('vmGalleryInfo').imagePublisher]",
                        "offer": "[parameters('vmGalleryInfo').imageOffer]",
                        "sku": "[parameters('vmGalleryInfo').imageSKU]",
                        "version": "latest"
                    },
                    "osDisk": {
                        "name": "osdisk",
                        "vhd": {
                            "uri": "[concat(variables('storageAccountUri'), '/', variables('OSDiskName'), '.vhd')]"
                        },
                        "caching": "ReadWrite",
                        "createOption": "FromImage"
                    }
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "properties": {
                                "primary": true
                            },
                            "id": "[resourceId('Microsoft.Network/networkInterfaces', concat(parameters('vmName'),'-nic0'))]"
                        },
                        {
                            "properties": {
                                "primary": false
                            },
                            "id": "[resourceId('Microsoft.Network/networkInterfaces', concat(parameters('vmName'),'-nic1'))]"
                        }
                    ]
                },
                "diagnosticsProfile": {
                    "bootDiagnostics": {
                        "enabled": "true",
                        "storageUri": "[concat('http://', variables('storageAccount'), '.blob.core.windows.net')]"
                    }
                }
            }
        }
    ]
}
