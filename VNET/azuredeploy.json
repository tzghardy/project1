{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
       "location": {
         "type": "string",
         "metadata": {
           "description": "location for deployment"
         }
       },
       "vnetDefinition": {
         "type": "array",
         "metadata": {
           "description": "definition for the virtual network"
         }
       },
       "subnetDefinition": {
         "type": "object",
         "metadata": {
           "description": "definition of the subnets in the virtual network"
         }
       }
    },
    "variables": {
      "apiVersion": "2015-06-15"
    },
    "resources": [
      {
        "name": "[parameters('vnetDefinition')[0]]",
        "type": "Microsoft.Network/virtualNetworks",
        "location": "[parameters('location')]",
        "apiVersion": "[variables('apiVersion')]",
        "dependsOn": [],
        "tags": {
            "displayName": "VDC Virtual Network",
            "location": "[parameters('location')]"
        },
        "properties": {
          "addressSpace": {
              "addressPrefixes": [
                "[parameters('vnetDefinition')[1]]"
              ]
          },
          "subnets": [
            {
              "name": "[toLower(parameters('subnetDefinition')[copyIndex()].subnetName)]",
              "copy": {
                "name": "SubnetCreate",
                "count": "[parameters('vnetDefinition')[2]]"
              },
              "properties": {
                "addressPrefix": "[parameters('subnetDefinition')[copyIndex()].addressPrefix]",
                "networkSecurityGroup": {
                    "id": "[resourceId('Microsoft.Networks/networkSecurityGroups',parameters('subnetDefinition')[copyIndex()].subnetName)]"
                }
              },
              "tags": {
                "displayName": "[parameters('subnetDefinition')[copyIndex()].subnetName]",
              }
            }
          ]
        }
      }
    ]
}
