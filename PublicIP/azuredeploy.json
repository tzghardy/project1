{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "location": {
      "type": "string",
      "defaultValue": "eastus"
    },
    "vdcName": {
      "type": "string",
      "defaultValue": "VDC2"
    },
    "publicIPName": {
      "type": "string",
      "metadata": {
        "description": "public IP address name"
      },
      "defaultValue": "PIP-vdc2name"
    },
    "domainNameLabel": {
      "type": "string",
      "metadata": {
        "description": "dns prefix"
      },
      "defaultValue": "abrac234"
    },
    "publicIPAllocationMethod": {
      "type": "string",
      "metadata": {
        "description": "public IP Allocation Method (static or dynamic)"
      },
      "allowedValues": [
        "static",
        "dynamic"
      ],
      "defaultValue": "dynamic"
    }
  },
  "variables": {
    "apiVer": "2015-06-15",
    "rgName": "[resourceGroup().name]",
    "PIPName": "[concat('PIP-',parameters('vdcName'),parameters('publicIPName'))]"
  },
  "resources": [
    {
      "apiVersion": "[variables('apiVer')]",
      "type": "Microsoft.Network/publicIPAddresses",
      "name": "[variables('PIPName')]",
      "location": "[parameters('location')]",
      "properties": {
        "publicIPAllocationMethod": "[parameters('publicIPAllocationMethod')]",
        "dnsSettings": {
          "domainNameLabel": "[parameters('domainNameLabel')]"
        }
      }
    }
  ],
  "outputs": {
    "publicIPID": {
      "value": "[resourceId(concat('Microsoft.Network/publicIPAddresses/'),variables('PIPName'))]",
      "type": "string"
    },
    "fqdn": {
      "value": "[reference(resourceId('Microsoft.Network/publicIPAddresses/',variables('PIPName')),providers('Microsoft.Network', 'publicIPAddresses').apiVersions[0]).dnsSettings.fqdn]",
      "type": "string"
    }
  }
}
