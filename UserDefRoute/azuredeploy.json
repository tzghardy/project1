{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
      "location": {
        "type": "string",
        "metadata": {
          "description": "resource location"
        }
      },
      "vnetDefinition": {
        "type": "object",
        "metadata": {
          "description": "vnet definition array"
        }
      },
      "subnetDefinition": {
        "type": "array",
        "metadata": {
          "description": "subnet definition object"
        }
      },
      "routerIPAddresses": {
        "type": "object",
        "metadata": {
          "description": "router IP Address assignment"
        }
      }
    },
    "variables": {
      "apiVersion": "2015-08-01",
    },
    "resources": [
        {
          "apiVersion": "[variables('apiVersion')]",
          "type": "Microsoft.Network/routeTables",
          "name": "[toLower(concat('udr',parameters('subnetDefinition')[copyIndex()].subnetName))]",
          "location": "[parameters('location')]",
          "copy": {
            "name": "Iteration",
            "count": "[parameters('vnetDefinition').subnetCount]"
          },
          "properties": {
            "routes": [
              {
                "name": "[concat('DefaultRoute-',parameters('subnetDefinition')[copyIndex()].subnetName)]",
                "properties": {
                  "addressPrefix": "0.0.0.0/0",
                  "nextHopType": "VirtualAppliance",
                  "nextHopIpAddress": "[parameters('vmIpAddress').parameters('subnetDefinition')[copyIndex()].subnetName]"
                }
              }
            ]
          }
        },
    ],
    "outputs": {}
}
