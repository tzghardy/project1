{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
      "VDCName": {
         "type": "string",
         "metadata": {
           "description": "used to build NSG names, the nsg build method is used in other deployments"
         },
         "defaultValue": "VDCNoName",
      },
      "subnetFEfixedName": {
            "type": "string",
            "defaultValue": "subnetFEfixed"
      },
      "subnetFEdynamicName": {
            "type": "string",
            "defaultValue": "subnetFEdynamic"
      },
      "subnetBEfixedName": {
            "type": "string",
            "defaultValue": "subnetBEfixed"
      },
      "subnetBEdynamicName": {
            "type": "string",
            "defaultValue": "subnetBEdynamic"
      },
      "subnetSECfixedName": {
            "type": "string",
            "defaultValue": "subnetSECfixed"
      }
    },
    "variables": {
        "rgName": "[resourceGroup().name]",
        "location": "[resourceGroup().location]",
        "vnetSubnetFEfixedNSGName": "[toLower('NSG',parameters('subnetFEfixedName')))]",
        "vnetSubnetFEdynamicNSGName": "[toLower('NSG',parameters('subnetFEdynamicName')))]",
        "vnetSubnetBEfixedNSGName": "[toLower('NSG',parameters('subnetBEfixedName')))]",
        "vnetSubnetBEdynamicNSGName": "[toLower('NSG',parameters('subnetBEdynamicName')))]",
        "vnetSubnetSECfixedNSGName": "[toLower('NSG',parameters('subnetSECfixedName')))]",

    },
    "resources": [
        {
          "apiVersion": "2015-05-01-preview",
          "type": "Microsoft.Network/networkSecurityGroups",
          "name": "[variables('vnetSubnetFEfixedNSGName')]",
          "location": "[variables('location')]",
          "properties": {
            "securityRules": []
          }
        },
        {
          "apiVersion": "2015-05-01-preview",
          "type": "Microsoft.Network/networkSecurityGroups",
          "name": "[variables('vnetSubnetFEdynamicNSGName')]",
          "location": "[variables('location')]",
          "properties": {
            "securityRules": []
          }
        },
        {
          "apiVersion": "2015-05-01-preview",
          "type": "Microsoft.Network/networkSecurityGroups",
          "name": "[variables('vnetSubnetBEfixedNSGName')]",
          "location": "[variables('location')]",
          "properties": {
            "securityRules": []
          }
        },
        {
          "apiVersion": "2015-05-01-preview",
          "type": "Microsoft.Network/networkSecurityGroups",
          "name": "[variables('vnetSubnetBEdynamicNSGName')]",
          "location": "[variables('location')]",
          "properties": {
            "securityRules": []
          }
        },
        {
          "apiVersion": "2015-05-01-preview",
          "type": "Microsoft.Network/networkSecurityGroups",
          "name": "[variables('vnetSubnetSECfixedNSGName')]",
          "location": "[variables('location')]",
          "properties": {
            "securityRules": []
          }
        }
    ]
}
